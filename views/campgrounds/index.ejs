<% layout("layout/boilerplate")%>
<h1>營地資訊</h1>
<div class="mb-3">
    <a href="/campgrounds/new" class="btn btn-outline-primary">新增營地</a>
</div>
<ul>
    <%for (let campground of campgrounds){%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%=campground.image%>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title%></h5>
                    <p class="card-text"><%=campground.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location%></small>
                    </p>
                    <a href="/campgrounds/<%=campground.campgroundID%>" class="btn btn-outline-info">View<%=campground.title%></a>
                </div>
            </div>
        </div>
    </div>
    <%}%>
</ul>

